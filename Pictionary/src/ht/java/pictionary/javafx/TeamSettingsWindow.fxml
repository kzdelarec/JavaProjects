<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="250.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ht.java.pictionary.javafx.TeamSettingsWindowController">
   <center>
      <VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Team 1" />
            <HBox alignment="CENTER" prefHeight="36.0" prefWidth="250.0">
               <children>
                  <Label text="Color: " />
                  <ColorPicker fx:id="teamOneColor" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="28.0" prefWidth="250.0">
               <children>
                  <Label text="Name: " />
                  <TextField fx:id="teamOneName" prefHeight="48.0" prefWidth="149.0" />
               </children>
            </HBox>
            <Label text="Team 2">
               <padding>
                  <Insets top="10.0" />
               </padding>
            </Label>
            <HBox alignment="CENTER" prefHeight="36.0" prefWidth="250.0">
               <children>
                  <Label text="Color: " />
                  <ColorPicker fx:id="teamTwoColor" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="28.0" prefWidth="250.0">
               <children>
                  <Label text="Name: " />
                  <TextField fx:id="teamTwoName" prefHeight="48.0" prefWidth="149.0" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#save" text="save">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
